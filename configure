#!/bin/sh

set -e

# install depes

if [ "$USER" != "root" ]; then
	SUDO="sudo"
fi

if [ "`which tsc`" = "" ]; then
	$SUDO npm install typescript -g;
fi

if   [ ! -d libs/somes ] \
	|| [ ! -d libs/ftrp/gyp ] \
	|| [ ! -d depe/v8-link ] \
	|| [ ! -d depe/ffmpeg ] \
	|| [ ! -d depe/node ] \
	|| [ ! -d depe/bplus ] \
; then
	make pull
fi

# build libs/ftr
if [ ! -f libs/ftr/out/ftr/package.json ]; then
	cd libs/ftr
	npm i
	npm run build
	cd ../..
fi

# build libs/somes
if [ ! -f libs/somes/out/somes/package.json ]; then
	cd libs/somes
	npm i
	npm run build
	cd ../..
fi

# build libs/ftrp
if [ ! -f libs/ftrp/out/ftrp/package.json ]; then
	cd libs/ftrp
	npm i
	rm -rf node_modules/somes
	cd node_modules
	ln -s ../../somes/out/somes
	cd ..
	npm run build
	cd ../..
fi

if   [ ! -d tools/node_modules/somes ] \
	|| [ ! -d tools/node_modules/ftrp ] \
; then
	rm -rf tools/node_modules/*
	mkdir -p tools/node_modules
	cd tools/node_modules
	ln -s ../../libs/somes/out/somes
	ln -s ../../libs/ftrp/out/ftrp
	cd ../..
fi

if [ ! -d node_modules ]; then
	mkdir node_modules
	cd node_modules
	ln -s ../libs/ftr/out/ftr
	ln -s ../libs/somes/out/somes
	ln -s ../libs/ftrp/out/ftrp
	cd ..
fi

if [ ! -d depe/v8 ]; then
	echo Please run \`make init\` to pull dependency first
	exit 1
fi

cd depe/v8

[ ! -L testing/gtest ] && ln -sf ../../v8_deps/googletest testing/gtest
[ ! -L base/trace_event/common ] && mkdir -p base/trace_event && ln -sf ../../../v8_deps/common base/trace_event/common
[ ! -d third_party/jinja2 ] && cp -rf ../v8_deps/jinja2 third_party
[ ! -d third_party/markupsafe ] &&  cp -rf ../v8_deps/markupsafe third_party

cd ../..

node tools/configure.js "$@"